<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    	xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/quick_number_item"
   	android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:background="@drawable/call_dial_add_item"
	android:orientation="horizontal">
         <QuickContactBadge
                android:id="@+id/quick_contact_photo_item"
                android:layout_marginTop="7dip"
                android:layout_marginBottom="7dip"
                android:layout_marginLeft="7dip"
                android:layout_marginRight="7dip"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/contacts_default_image_small" 
                />

        <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center_vertical"
	        android:layout_marginTop="@dimen/call_log_inner_margin"
	        android:layout_marginLeft="@dimen/call_log_inner_margin">

        <TextView
		android:id="@+id/searchname_item"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="?attr/call_log_primary_background_color"
		android:textSize="18sp"
		android:singleLine="true" />

        <TextView
		android:id="@+id/searchnum_item"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:textColor="?attr/call_log_primary_background_color"
		android:textSize="14sp"
		android:singleLine="true" />
  	</LinearLayout>
          	
</LinearLayout>
